{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"name": "root",
	"version": "0.1.0",
	"packageManager": "pnpm@10.2.0+sha512.0d27364e0139c6aadeed65ada153135e0ca96c8da42123bd50047f961339dc7a758fc2e944b428f52be570d1bd3372455c1c65fa2e7aa0bfbf931190f9552001",
	"scripts": {
		"build": "pnpm run --reporter=append-only --workspace-root \"/^build:.*/\" ",
		"build:doc": "typedoc --logLevel Verbose",
		"clean": "pnpm run --reporter=append-only --workspace-root \"/^clean:.*/\"; rm -rf \"./**/node_modules\" ",
		"clean:cache": "rm -rf \"./node_modules/.cache\" ",
		"clean:docs": "rm -rf \"./docs\" ",
		"dev": "pnpm run --reporter=append-only --workspace-root \"/^dev:.*/\" ",
		"dev:test": "vitest --ui",
		"fix": "pnpm run --reporter=append-only --workspace-root \"/^fix:.*/\" ",
		"fix:biome": "biome check . --verbose --write",
		"fix:format": "biome format . --verbose --write",
		"fix:js": "biome lint . --verbose --fix --unsafe",
		"knip": "knip",
		"lint": "pnpm run --reporter=append-only --workspace-root \"/^lint:.*/\" ",
		"lint:biome": "biome check . --verbose",
		"lint:format": "biome format . --verbose",
		"lint:js": "biome lint . --verbose",
		"serve:doc": "serve \"./docs\" ",
		"test": "vitest run --passWithNoTests",
		"_ci:test": "vitest run --coverage.enabled --coverage.provider=v8 --coverage.reporter=json-summary --coverage.reporter=json",
		"_cr:publish": "pnpm changeset publish",
		"_cr:version": "pnpm changeset version && pnpm fix:format"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.0",
		"@types/node": "^22.13.0",
		"@vitest/coverage-v8": "^3.0.5",
		"@vitest/ui": "^3.0.5",
		"knip": "^5.43.0",
		"serve": "^14.2.0",
		"typedoc": "^0.27.0",
		"typedoc-plugin-coverage": "^3.4.0",
		"typedoc-plugin-dt-links": "^1.1.10",
		"typedoc-plugin-mdn-links": "^4.0.0",
		"typedoc-plugin-missing-exports": "^3.1.0",
		"typescript": "catalog:",
		"vite": "^6.1.0",
		"vitest": "^3.0.5"
	}
}
